!!! XHTML
%html
  %head
    %title= @title
    %meta{:name => 'viewport',:content => 'width=950px,user-scalable=yes'}
    %link{:rel => 'stylesheet', :href => "#{app_root}/css/reset-3.1.1.css", :type => 'text/css'}
    %link{:rel => 'stylesheet', :href => "#{app_root}/css/fonts-3.1.1.css", :type => 'text/css'}
    %link{:rel => 'stylesheet', :href => "#{app_root}/css/main.css", :type => 'text/css'}
    :javascript
      var api = "#{app_root}/chat.json";
      var camera_url = "#{camera_url}";
      var robot_api = "#{app_root}/robot";
      var app_root = "#{app_root}";
    %script{:type => 'text/javascript', :src => "#{app_root}/js/jquery.js"}
    %script{:type => 'text/javascript', :src => "#{app_root}/js/jquery.cookie.js"}
    %script{:type => 'text/javascript', :src => "#{app_root}/js/util.js"}
    %script{:type => 'text/javascript', :src => "#{app_root}/js/chat.js"}
    %script{:type => 'text/javascript', :src => "#{app_root}/js/camera-server.js"}
  %body
    %div#content
      %div#head
        %h1= @title
        %form#chat
          名前
          %input{:type => 'text', :id => 'name', :size => 10, :value => 'おなまえ'}
          ：
          %input{:type => 'text', :id => 'message', :size => 40, :value => 'たまご〜'}
          %input{:type => 'button', :id => 'post', :value => '送信'}
      %div#chat
      %div#chat_paging
        Paging
      #div#users
      %div#robot
        %div#camera
        %div#controller
          %div#top
            %span.button#go ↑
          %div#middle
            %span.button#left ←
            %span.button#led ●
            %span.button#right →
          %div#bottom
            %span.button#back ↓
